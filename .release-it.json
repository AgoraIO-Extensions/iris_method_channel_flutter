{
  "git": {
    "commitMessage": "chore: release ${version}",
    "tag": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    },
    "@release-it/bumper": {
      "in": "pubspec.yaml",
      "out": "pubspec.yaml"
    }
  }
}
